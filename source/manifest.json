{
  "manifest_version": 3,
  "name": "划词助手",
  "version": "1.0",
  "description": "划词后右击获取内容并在插件中显示",
  "permissions": ["contextMenus", "storage", "activeTab"],
  "host_permissions": ["http://127.0.0.1:5000/"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon128.png"
  },
  "icons": {
    "128": "icon128.png"
  }
}